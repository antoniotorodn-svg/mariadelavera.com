---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<div class="faq-accordion">
  {items.map((item, index) => (
    <div class="faq-accordion__item">
      <button
        class="faq-accordion__question"
        aria-expanded="false"
        aria-controls={`faq-answer-${index}`}
        id={`faq-question-${index}`}
      >
        <span>{item.question}</span>
        <span class="faq-accordion__icon">+</span>
      </button>
      <div
        class="faq-accordion__answer"
        id={`faq-answer-${index}`}
        aria-labelledby={`faq-question-${index}`}
        role="region"
      >
        <div class="faq-accordion__answer-content">
          {item.answer}
        </div>
      </div>
    </div>
  ))}
</div>

<style>
  .faq-accordion {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .faq-accordion__item {
    background-color: var(--color-white);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .faq-accordion__question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: var(--font-body);
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-text-primary);
    transition: var(--transition-base);
  }

  .faq-accordion__question:hover {
    background-color: var(--color-bg-secondary);
  }

  .faq-accordion__icon {
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-trust);
    transition: transform var(--transition-base);
    flex-shrink: 0;
    margin-left: var(--spacing-md);
  }

  .faq-accordion__question[aria-expanded="true"] .faq-accordion__icon {
    transform: rotate(45deg);
  }

  .faq-accordion__answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-accordion__answer-content {
    padding: 0 var(--spacing-lg) var(--spacing-md);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .faq-accordion__question[aria-expanded="true"] + .faq-accordion__answer {
    max-height: 500px;
  }
</style>

<script>
  // Accordion functionality
  const accordionButtons = document.querySelectorAll('.faq-accordion__question');

  accordionButtons.forEach(button => {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('aria-expanded') === 'true';

      // Cerrar otros (comportamiento de uno a la vez)
      accordionButtons.forEach(otherButton => {
        if (otherButton !== button) {
          otherButton.setAttribute('aria-expanded', 'false');
        }
      });

      // Toggle el actual
      button.setAttribute('aria-expanded', !isExpanded ? 'true' : 'false');
    });
  });
</script>
