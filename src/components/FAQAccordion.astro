---
interface FAQItem {
  question: string;
  answer: string;
  icon?: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<div class="faq-list">
  {items.map((item) => (
    <div class="faq-item">
      <button class="faq-q" onclick="this.parentElement.classList.toggle('open')">
        {item.icon && <span>{item.icon}</span>} {item.question}
        <span class="faq-icon">+</span>
      </button>
      <div class="faq-a">{item.answer}</div>
    </div>
  ))}
</div>

<style>
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .faq-item {
    background: var(--white);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--sand-dark);
  }

  .faq-q {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 24px;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.95em;
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    color: var(--text);
    font-family: var(--font-body);
    gap: 12px;
  }

  .faq-q:hover {
    background: var(--sand);
  }

  .faq-icon {
    font-size: 1.3em;
    color: var(--text-light);
    transition: transform 0.3s;
    flex-shrink: 0;
  }

  .faq-a {
    padding: 0 24px 18px;
    font-size: 0.9em;
    color: var(--text-light);
    line-height: 1.65;
    display: none;
  }

  .faq-item.open .faq-q {
    background: var(--cream);
  }

  .faq-item.open .faq-a {
    display: block;
    color: var(--text);
  }

  .faq-item.open .faq-icon {
    transform: rotate(45deg);
  }

  @media (max-width: 900px) {
    .faq-q { padding: 14px 16px; font-size: 0.85em; }
    .faq-a { padding: 0 16px 14px; font-size: 0.82em; }
    .faq-icon { font-size: 1.1em; }
  }
</style>
