---
interface Props {
  title?: string;
  compact?: boolean;
}

const {
  title = "Presentación María De la Vera - Nutricionista",
  compact = false
} = Astro.props;

const videoUrl = "https://player.vimeo.com/video/1137833163?h=7317f4af36&title=0&byline=0&portrait=0";
---

<div class={`video-embed ${compact ? 'video-embed--compact' : ''}`}>
  <div class="video-embed__wrapper">
    <iframe
      src={videoUrl}
      style="position:absolute;top:0;left:0;width:100%;height:100%;"
      frameborder="0"
      allow="autoplay; fullscreen; picture-in-picture"
      allowfullscreen
      title={title}
      loading="lazy"
    ></iframe>
  </div>
</div>

<style>
  .video-embed__wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    background-color: #000;
  }

  .video-embed--compact .video-embed__wrapper {
    border-radius: var(--radius-sm);
    box-shadow: var(--shadow-md);
  }

  /* Responsive ajustes */
  @media (max-width: 767px) {
    .video-embed__wrapper {
      border-radius: var(--radius-sm);
    }
  }
</style>
