---
import VideoEmbed from './VideoEmbed.astro';

interface Props {
  // Homepage mode (name | role)
  name?: string;
  role?: string;
  // Service/barrio page mode (custom title)
  title?: string;
  // Shared props
  location?: string;
  description?: string;
  showVideo?: boolean;
  benefits?: Array<{ emoji: string; text: string }>;
}

const {
  name,
  role,
  title,
  location = "Boadilla del Monte",
  description = "",
  showVideo = true,
  benefits = []
} = Astro.props;

// Determine if we're in homepage mode (name|role) or service page mode (title)
const isHomepage = !title && (name || role);
const displayName = name || "Mar√≠a De la Vera";
const displayRole = role || "Nutricionista";
---

<section class="hero">
  <div class="container">
    <div class="hero__grid">
      <div class="hero__content">
        <!-- Profile photo -->
        <div class="hero__avatar-wrap">
          <div class="hero__avatar">
            <span>üë©‚Äç‚öïÔ∏è</span>
          </div>
        </div>

        <!-- Location -->
        <p class="hero__location">{location}</p>

        <!-- Title -->
        <h1 class="hero__title">
          {isHomepage ? (
            <>{displayName} <span class="hero__sep">|</span> {displayRole}</>
          ) : (
            title
          )}
        </h1>

        <!-- Action pills row -->
        <div class="hero__actions">
          <a href="#proceso" class="hero__pill">
            <span>Proceso</span>
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
          </a>
          <a href="#precios" class="hero__pill">
            <span>Precios</span>
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
          </a>
          <a href="#reservar" class="hero__pill hero__pill--dark">
            Reserva cita
          </a>
          <a href="https://wa.link/8y1ykx" class="hero__pill hero__pill--wa" target="_blank" rel="noopener">
