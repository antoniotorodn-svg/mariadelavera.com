            WhatsApp
          </a>
        </div>

        <!-- Description -->
        {description && <p class="hero__desc">{description}</p>}
      </div>

      <!-- Video / Media -->
      {showVideo && (
        <div class="hero__media">
          <VideoEmbed />
        </div>
      )}
    </div>

    <!-- Benefits row -->
    {benefits && benefits.length > 0 && (
      <div class="hero__benefits">
        {benefits.map(item => (
          <div class="hero__benefit">
            <span class="hero__benefit-icon">{item.emoji}</span>
            <span class="hero__benefit-label">{item.text}</span>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  /* ===== HERO - Estilo Mentaris (minimalista, blanco, outlined pills) ===== */
  .hero {
    padding: 4rem 0 3rem;
    background: #ffffff;
    position: relative;
  }

  .hero__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero {
      padding: 5rem 0 3.5rem;
    }

    .hero__grid {
      grid-template-columns: 1.1fr 0.9fr;
      gap: 4rem;
    }
  }

  .hero__content {
    max-width: 560px;
  }

  /* Avatar */
  .hero__avatar-wrap {
    margin-bottom: 1.25rem;
  }

  .hero__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    border: 2px solid #eee;
  }

  /* Location */
  .hero__location {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: #888;
    margin-bottom: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.01em;
  }

  /* Title */
  .hero__title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.1;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero__sep {
    color: #ccc;
    font-weight: 300;
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: 3.25rem;
    }
  }

  /* Action pill buttons */
  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    margin-bottom: 1.75rem;
  }

  .hero__pill {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1.25rem;
    border: 1.5px solid #e0e0e0;
    border-radius: 50px;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 500;
    color: #1a1a1a;
    text-decoration: none;
    background: #fff;
    transition: all 0.2s ease;
    cursor: pointer;
    white-space: nowrap;
  }

  .hero__pill:hover {
    border-color: #1a1a1a;
    background: #fafafa;
    text-decoration: none;
    transform: translateY(-1px);
  }

  .hero__pill svg {
    opacity: 0.4;
    transition: opacity 0.2s ease;
  }

  .hero__pill:hover svg {
    opacity: 1;
  }

  .hero__pill--dark {
    background: #1a1a1a;
    color: #fff;
    border-color: #1a1a1a;
  }

  .hero__pill--dark:hover {
    background: #333;
    border-color: #333;
    color: #fff;
    text-decoration: none;
  }

  .hero__pill--wa {
    color: #25d366;
    border-color: #d4edda;
  }

  .hero__pill--wa:hover {
    border-color: #25d366;
    background: #f0fdf4;
    color: #25d366;
    text-decoration: none;
  }

  /* Description */
  .hero__desc {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.75;
    color: #666;
    margin-bottom: 0;
  }

  /* Media / Video */
  .hero__media {
    width: 100%;
  }

  /* Benefits row */
  .hero__benefits {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-top: 3rem;
    padding-top: 2.5rem;
    border-top: 1px solid #f0f0f0;
  }

  .hero__benefit {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .hero__benefit-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .hero__benefit-label {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 600;
    color: #1a1a1a;
    letter-spacing: -0.01em;
  }

  /* Mobile */
  @media (max-width: 480px) {
    .hero {
      padding: 2.5rem 0 2rem;
    }

    .hero__title {
      font-size: 2rem;
    }

    .hero__actions {
      gap: 0.5rem;
    }

    .hero__pill {
      padding: 0.5rem 1rem;
      font-size: 0.8125rem;
    }

    .hero__benefits {
      gap: 1.25rem;
    }

    .hero__benefit-label {
      font-size: 0.8125rem;
    }
  }
</style>
