---
interface Props {
  emoji: string;
  title: string;
  description: string;
  href: string;
}

const { emoji, title, description, href } = Astro.props;
---

<a href={href} class="service-card">
  <div class="service-card__emoji-wrap">
    <span class="service-card__emoji">{emoji}</span>
  </div>
  <h3 class="service-card__title">{title}</h3>
  <p class="service-card__description">{description}</p>
  <span class="service-card__link">
    Saber m√°s
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M5 12h14"/>
      <path d="m12 5 7 7-7 7"/>
    </svg>
  </span>
</a>

<style>
  .service-card {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    background-color: var(--color-white);
    border-radius: var(--radius-md);
    padding: var(--spacing-xl) var(--spacing-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--mentaris-border);
    transition: all var(--transition-base);
    cursor: pointer;
    text-decoration: none;
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-green);
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--mentaris-shadow-hover);
    border-color: rgba(124, 182, 157, 0.3);
    text-decoration: none;
  }

  .service-card:hover::before {
    opacity: 1;
  }

  .service-card__emoji-wrap {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-md);
    background: var(--mentaris-green-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
    transition: all var(--transition-base);
  }

  .service-card:hover .service-card__emoji-wrap {
    background: linear-gradient(135deg, var(--mentaris-green-light) 0%, var(--mentaris-cream-light) 100%);
    transform: scale(1.05);
  }

  .service-card__emoji {
    font-size: 1.75rem;
  }

  .service-card__title {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 400;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-primary);
  }

  .service-card__description {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
    flex-grow: 1;
  }

  .service-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-trust);
    font-weight: 600;
    font-size: 0.9rem;
    font-family: var(--font-body);
    transition: all var(--transition-base);
  }

  .service-card__link svg {
    transition: transform var(--transition-base);
  }

  .service-card:hover .service-card__link svg {
    transform: translateX(4px);
  }
</style>
