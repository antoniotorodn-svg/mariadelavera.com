---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'primary' | 'trust' | 'whatsapp';
}

const {
  title,
  description,
  ctaText = "Reservar cita",
  ctaHref = "#reservar",
  variant = "primary"
} = Astro.props;
---

<div class="cta-box">
  <div class="container">
    <div class="cta-box__content">
      <h2 class="cta-box__title">{title}</h2>
      <p class="cta-box__description">{description}</p>
      <a href={ctaHref} class={`btn btn--${variant} btn--large`}>
        {ctaText}
      </a>
    </div>
  </div>
</div>

<style>
  .cta-box {
    padding: var(--spacing-3xl) 0;
    background: var(--gradient-warm);
  }

  .cta-box__content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-box__title {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }

  @media (min-width: 768px) {
    .cta-box__title {
      font-size: 3rem;
    }
  }

  .cta-box__description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .btn--large {
    padding: 1.125rem 2.5rem;
    font-size: 1.125rem;
  }
</style>
