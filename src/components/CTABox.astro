---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: 'primary' | 'trust' | 'whatsapp';
}

const {
  title,
  description,
  ctaText = "Reservar cita",
  ctaHref = "#reservar",
  variant = "primary"
} = Astro.props;
---

<div class="cta-box">
  <div class="cta-box__decoration"></div>
  <div class="container">
    <div class="cta-box__content">
      <h2 class="cta-box__title">{title}</h2>
      <p class="cta-box__description">{description}</p>
      <a href={ctaHref} class={`btn btn--${variant} btn--large`}>
        {ctaText}
      </a>
    </div>
  </div>
</div>

<style>
  .cta-box {
    padding: var(--spacing-3xl) 0;
    background: #fafafa;
    position: relative;
    overflow: hidden;
  }

  .cta-box__decoration {
    display: none;
  }

  .cta-box__content {
    text-align: center;
    max-width: 650px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-box__title {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 400;
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
  }

  @media (min-width: 768px) {
    .cta-box__title {
      font-size: 2.75rem;
    }
  }

  .cta-box__description {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.7;
  }

  .btn--large {
    padding: 1.125rem 2.5rem;
    font-size: 1.0625rem;
  }
</style>
