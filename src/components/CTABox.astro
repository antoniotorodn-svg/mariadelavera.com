---
interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  variant?: string; // backward compat, ignored
}

const {
  title = "¿Damos el primer paso?",
  description = "Escríbeme y te oriento sin compromiso. Tu salud no puede esperar.",
  ctaText = "WhatsApp — 611 43 86 79",
  ctaHref = "https://wa.me/34611438679?text=Hola%2C%20me%20gustar%C3%ADa%20pedir%20cita"
} = Astro.props;
---

<div class="cta-final">
  <div class="cta-card">
    <h2>{title}</h2>
    <p>{description}</p>
    <a href={ctaHref} class="btn-wa" target="_blank" rel="noopener">{ctaText}</a>
  </div>
</div>

<style>
  .cta-final {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px 60px;
  }

  .cta-card {
    background: linear-gradient(135deg, var(--green-dark), var(--green));
    border-radius: var(--radius);
    padding: 48px 40px;
    text-align: center;
    color: white;
  }

  .cta-card h2 {
    font-family: 'DM Serif Display', Georgia, serif;
    font-size: 1.7em;
    font-weight: 400;
    margin-bottom: 12px;
    color: white;
  }

  .cta-card p {
    font-size: 0.95em;
    opacity: 0.9;
    margin-bottom: 24px;
    color: white;
  }

  .btn-wa {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 30px;
    background: white;
    color: var(--green-dark);
    border-radius: 100px;
    font-weight: 700;
    font-size: 0.92em;
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    transition: all 0.2s;
    text-decoration: none;
  }

  .btn-wa:hover {
    background: var(--sand);
    transform: translateY(-2px);
  }

  @media (max-width: 900px) {
    .cta-final { padding: 0 16px 32px; }
    .cta-card { padding: 28px 20px; }
    .cta-card h2 { font-size: 1.2em; }
    .cta-card p { font-size: 0.85em; }
    .btn-wa { padding: 12px 24px; font-size: 0.85em; }
  }
</style>
