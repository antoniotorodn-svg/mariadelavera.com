---
interface TrustItem {
  icon: string;
  text: string;
}

interface Props {
  items?: TrustItem[];
}

const {
  items = [
    { icon: "\u2713", text: "Colegiada oficial MAD01182" },
    { icon: "\u2713", text: "+700 pacientes atendidos" },
    { icon: "\u2713", text: "Presencial + Online" }
  ]
} = Astro.props;
---

<div class="trust-strip">
  <div class="container">
    <div class="trust-strip__grid">
      {items.map(item => (
        <div class="trust-strip__item">
          <span class="trust-strip__icon">{item.icon}</span>
          <span class="trust-strip__text">{item.text}</span>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .trust-strip {
    padding: var(--spacing-md) 0;
    background-color: var(--gold-light);
    border-top: 1px solid var(--sand-dark);
    border-bottom: 1px solid var(--sand-dark);
  }

  .trust-strip__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-sm);
    text-align: center;
  }

  @media (min-width: 640px) {
    .trust-strip__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .trust-strip__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .trust-strip__item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .trust-strip__icon {
    color: var(--green-dark);
    font-weight: 700;
    font-size: 0.875rem;
  }

  .trust-strip__text {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text);
    font-family: var(--font-body);
  }
</style>
