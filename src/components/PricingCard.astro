---
interface Props {
  title: string;
  price: string;
  subtitle?: string;
  features: string[];
  highlighted?: boolean;
  savings?: string;
  ctaText?: string;
  ctaHref?: string;
  note?: string;
}

const {
  title,
  price,
  subtitle,
  features,
  highlighted = false,
  savings,
  ctaText = "PEDIR CITA",
  ctaHref = "#reservar",
  note
} = Astro.props;
---

<div class={`precio-card ${highlighted ? 'destacado' : ''}`}>
  <h3>{title}</h3>
  {subtitle && <span class="precio-sub">{subtitle}</span>}
  {savings && <span class="precio-ahorro">(Ahorro de {savings})</span>}
  <div class="precio-amount">{price}</div>
  <ul class="precio-features">
    {features.map(f => <li>{f}</li>)}
  </ul>
  <a href={ctaHref} class={`precio-cta ${highlighted ? 'cta-gold' : 'cta-outline'}`}>{ctaText}</a>
  {note && <div class="precio-note">{note}</div>}
</div>

<style>
  .precio-card {
    background: var(--white);
    border-radius: var(--radius);
    padding: 32px 28px;
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .precio-card.destacado {
    border: 2px solid var(--gold);
  }

  .precio-card h3 {
    font-size: 1.15em;
    font-weight: 700;
  }

  .precio-sub {
    font-size: 0.88em;
    color: var(--text-light);
  }

  .precio-ahorro {
    font-size: 0.85em;
    font-weight: 700;
    color: var(--gold);
  }

  .precio-amount {
    font-family: 'DM Serif Display', Georgia, serif;
    font-size: 2.8em;
    font-weight: 400;
  }

  .precio-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 6px;
    font-size: 0.88em;
  }

  .precio-features li::before {
    content: '\2713  ';
    color: var(--green-dark);
    font-weight: 700;
  }

  .precio-cta {
    display: block;
    text-align: center;
    padding: 14px;
    border-radius: 100px;
    font-weight: 700;
    font-size: 0.92em;
    transition: all 0.2s;
    margin-top: 8px;
    text-decoration: none;
  }

  .cta-gold {
    background: var(--gold);
    color: white;
  }

  .cta-gold:hover {
    background: #B8891E;
  }

  .cta-outline {
    border: 2px solid var(--gold);
    color: var(--gold);
    background: transparent;
  }

  .cta-outline:hover {
    background: var(--gold);
    color: white;
  }

  .precio-note {
    font-size: 0.82em;
    color: var(--green-dark);
    font-weight: 600;
    text-align: center;
  }

  @media (max-width: 900px) {
    .precio-card { padding: 22px 20px; }
    .precio-card h3 { font-size: 1em; }
    .precio-amount { font-size: 2.2em; }
    .precio-features { font-size: 0.82em; }
    .precio-cta { padding: 12px; font-size: 0.85em; }
    .precio-note { font-size: 0.75em; }
  }
</style>
