        <span class="nav__logo-name">MARÍA DE LA VERA</span>
      </a>

      <!-- Links -->
      <div class="nav__links">
        <a href="#servicios" class="nav__link">Servicios</a>
        <a href="#proceso" class="nav__link">Proceso</a>
        <a href="#precios" class="nav__link">Precios</a>
        <a href="#sobre-mi" class="nav__link">Sobre mí</a>
