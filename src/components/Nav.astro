<style>
  .nav {
    position: sticky;
    top: 0;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid #f0f0f0;
    z-index: 1000;
    padding: 1rem 0;
  }

  .nav__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav__logo {
    text-decoration: none;
  }

  .nav__logo:hover {
    text-decoration: none;
  }

  .nav__logo-name {
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: #1a1a1a;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }

  .nav__links {
    display: flex;
    align-items: center;
    gap: 1.75rem;
  }

  .nav__link {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 500;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav__link:hover {
    color: #1a1a1a;
    text-decoration: none;
  }

  .nav__link--phone {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: #1a1a1a;
    font-weight: 600;
  }

  /* Mobile: hide text links, show only logo + phone */
  @media (max-width: 768px) {
    .nav__links {
      gap: 0;
    }

    .nav__link:not(.nav__link--phone) {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .nav__logo-name {
      font-size: 0.6875rem;
      letter-spacing: 0.1em;
    }

    .nav__link--phone {
      font-size: 0.8125rem;
    }
  }
</style>
