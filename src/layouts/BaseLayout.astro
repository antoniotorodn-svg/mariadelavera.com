  "@context": "https://schema.org",
  "@type": ["Dietitian", "LocalBusiness"],
  "name": "María De la Vera - Nutricionista Boadilla del Monte",
  "description": "Dietista-Nutricionista colegiada MAD01182 en Boadilla del Monte. Consulta presencial y online. Pérdida de peso, nutrición deportiva, salud digestiva, hormonal y clínica.",
  "image": fullOgImage,
  "url": siteUrl,
  "telephone": "+34611438679",
  "email": "nutricionista.mariadelavera@gmail.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Av. Siglo XXI, 13, local 13/14, Centro Médico Arboleda",
    "addressLocality": "Boadilla del Monte",
    "addressRegion": "Madrid",
    "postalCode": "28660",
    "addressCountry": "ES"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "40.4021",
    "longitude": "-3.8777"
  },
  "priceRange": "50€ - 140€",
  "paymentAccepted": "Cash, Credit Card, Bizum",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "10:00",
      "closes": "14:00"
