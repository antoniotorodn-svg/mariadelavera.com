  ],
  "sameAs": [
    "https://www.google.es/maps/place//data=!4m2!3m1!1s0xd418ff572a44c05:0x4936e78853ca7fde"
  ]
};

const schemas = schema ? [defaultSchema, schema] : [defaultSchema];
