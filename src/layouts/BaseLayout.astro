---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  schema?: any;
}

const {
  title,
  description,
  canonical = Astro.url.pathname,
  ogImage = '/img/og-image.jpg',
  schema
